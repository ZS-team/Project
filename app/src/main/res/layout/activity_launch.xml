<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zsherry.project.LaunchActivity">
    <com.zsherry.project.CstTopBar
        android:id="@+id/cst_tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="56dp">

    </com.zsherry.project.CstTopBar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zsherry.project.TopHorizontalScrollView
            android:id="@+id/sv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_left_button"
            android:scrollbars="none">
        </com.zsherry.project.TopHorizontalScrollView>
        <!--<ImageButton-->
            <!--android:id="@+id/iv_left_button"-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@mipmap/ic_launcher"/>-->
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#214ea2"
        app:tabGravity="fill"
        app:tabIndicatorColor="#ffcb3c"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextColor="#ffffff"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>
